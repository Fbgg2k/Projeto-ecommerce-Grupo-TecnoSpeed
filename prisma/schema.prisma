generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Produto {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  nome           String
  cores          String[]  // Array de strings para as cores
  imagens        String[]  // Array de URLs das imagens
  desconto       Int       // Porcentagem de desconto
  preco          Float     // Preço do produto
  categoria      String
  opcao          Opcion[]  // Array de opções de tamanhos e disponibilidade
  descricao      String
  promocao       Boolean   // Se o produto está em promoção
  infoTecnicas   String[]  // Informações técnicas (array de strings)
  infoAdicionais String[]  // Informações adicionais (array de strings)
  createdAt      DateTime @default(now())
}

type Opcion {
  tamanho     String
  disponivel  Boolean
}

model Usuario {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  nome      String
  cpf       String
  email     String @unique
  endereco  String
  numero    String
  cidade    String
  estado    String
  cep       String
  senha     String
}
